<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".plus">

    <TextView
            android:text="Введите калории которые хотите добавить"
            android:layout_width="275dp"
            android:layout_height="104dp" android:id="@+id/textView2"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="164dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:maxLength="4"
            android:id="@+id/number"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.439"/>
    <ImageView
            android:layout_width="412dp"
            android:layout_height="86dp" app:srcCompat="@android:drawable/screen_background_dark"
            android:id="@+id/imageView8"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.538" app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="419dp"
            android:layout_height="17dp" app:srcCompat="@drawable/_23" android:id="@+id/imageView9"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/_23" android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="95dp"/>
    <ImageView
            android:layout_width="411dp"
            android:layout_height="100dp" app:srcCompat="@android:drawable/screen_background_dark"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
    />
    <TextView
            android:text="Менеджер калорий от  Tixan"
            android:layout_width="282dp"
            android:layout_height="80dp" android:id="@+id/textView5"
            android:textColor="#FCFFFF00" android:textSize="30sp"
            android:textStyle="bold" android:textAlignment="center" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.565"/>
    <Button
            android:text="Сохранить"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="438dp"
            app:layout_constraintVertical_bias="0.873"
            android:onClick="plus" app:layout_constraintTop_toTopOf="parent"
            app:backgroundTint="#FFE822"/>
</androidx.constraintlayout.widget.ConstraintLayout>