<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/u">
    <Button
            android:text="Посмотреть предыдущие результаты"
            android:layout_width="181dp"
            android:layout_height="81dp" android:id="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
            app:backgroundTint="#020202" android:onClick="view" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Добавить ккал"
            android:layout_width="181dp"
            android:layout_height="81dp" android:id="@+id/plus"
            android:layout_marginBottom="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.004"
            app:layout_constraintVertical_bias="0.873" app:backgroundTint="#000000" android:onClick="plus"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Отнять ккал"
            android:layout_width="181dp"
            android:layout_height="81dp" android:id="@+id/minus"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.873"
            android:layout_marginBottom="12dp"
            app:backgroundTint="#000000" android:onClick="minus" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Завершить день"
            android:layout_width="181dp"
            android:layout_height="81dp" android:id="@+id/finalday"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:backgroundTint="#FFDD00" android:onClick="finalday" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.982" android:autoText="false" android:textColorHint="#000000"
    />
    <TextView
            android:text="Промежуточный результат:"
            android:layout_width="264dp"
            android:layout_height="72dp" android:id="@+id/textView"
            android:textSize="30sp" android:textColorHint="#000000" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.235"/>
    <TextView
            android:layout_width="157dp"
            android:layout_height="63dp" android:id="@+id/promresult"
            android:textSize="50sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.174"
    />
    <ImageView
            android:layout_width="424dp"
            android:layout_height="198dp" app:srcCompat="@android:drawable/screen_background_dark"
            android:id="@+id/imageView8"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.538" app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/_23" android:id="@+id/imageView9"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="188dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/_23" android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="95dp"/>
    <ImageView
            android:layout_width="411dp"
            android:layout_height="100dp" app:srcCompat="@android:drawable/screen_background_dark"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
    />
    <TextView
            android:text="Менеджер калорий от  Tixan"
            android:layout_width="282dp"
            android:layout_height="80dp" android:id="@+id/textView5"
            android:textColor="#FCFFFF00" android:textSize="30sp"
            android:textStyle="bold" android:textAlignment="center" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.565"/>
</androidx.constraintlayout.widget.ConstraintLayout>